<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.americanfootball.MainActivity"
    android:orientation="vertical"
    android:background="#FFE082"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src = "@drawable/amfootball"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Team A"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#F44336"
                android:textSize="50sp" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreA"
                android:text="+1 points"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreAdoi"
                android:text="+2 Points"
                android:textColor="@android:color/white" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreAsase"
                android:padding="8dp"
                android:text="Touchdown (+6 POINTS)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreAtrei"
                android:padding="8dp"
                android:text="Field Goal  (+3 POINTS)"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Team B"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#F44336"
                android:textSize="50sp" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreB"
                android:text="+1 points"
                android:textColor="@android:color/white" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreBdoi"
                android:text="+2 Points"
                android:textColor="@android:color/white" />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreBsase"
                android:padding="8dp"
                android:text="Touchdown (+6 POINTS)"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:onClick="scoreBtrei"
                android:padding="8dp"
                android:text="Field Goal  (+3 POINTS)"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="reset"
            android:onClick="reset"
            android:background="#FFFF00"
            android:textStyle="bold"
            android:layout_marginTop="400dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:onClick="displayTheWinner"
            android:text="WINNER"
            android:background="#D50000"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="450dp"

            />
        <TextView
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="    "
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#D50000"
            android:layout_marginTop="450dp"

            />
    </LinearLayout>

</RelativeLayout>
